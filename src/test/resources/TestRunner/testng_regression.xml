<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Shop Cart Test automtion regression suite"
       thread-count="3" parallel="tests" verbose="3">
    <listeners>
        <listener class-name="com.qa.opencart.testlisteners.ExtentReportListener"></listener>
        <listener class-name="com.qa.opencart.testlisteners.TestAllureListener"></listener>
    </listeners>

    <test name="Login page Test">
        <classes>
            <class name="com.qa.opencart.tests.LoginTest" />
        </classes>
    </test>

    <test name="Accounts page Test">
        <classes>
            <class name="com.qa.opencart.tests.AccountTest" />
        </classes>
    </test>

</suite>